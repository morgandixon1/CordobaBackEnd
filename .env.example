# API Keys
# Get your Mapbox token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Get your OpenTopoData API key from: https://www.opentopodata.org/
OPENTOPO_API_KEY=your_opentopo_api_key_here

# Optional: Mapbox style (default is mapbox/streets-v11)
MAPBOX_STYLE=mapbox/streets-v11

# Optional: Default address for testing
DEFAULT_ADDRESS=1600 Pennsylvania Avenue NW, Washington, DC

# Optional: Add valid API keys for your application (comma-separated)
# Only needed if you're using the VALID_API_KEYS feature
VALID_API_KEYS=key1,key2

# Server Configuration (for Docker deployment)
FLASK_ENV=production
FLASK_DEBUG=False
